<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %>
    <style>
      .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
      }
      .login-title {
        text-align: center;
        margin-bottom: 2rem;
        color: #2c3e50;
      }
      .error-message {
        background-color: #ff0055;
        color: white;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        text-align: center;
      }
    </style>
  </head>
  <body style="background-color: #b0e0e6">
    <div class="login-container">
      <div class="login-card">
        <h1 class="login-title">Admin Bejelentkezés</h1>
        
        <% if (error) { %>
        <div class="error-message">
          <%= error %>
        </div>
        <% } %>
        
        <form method="POST" action="/admin/login">
          <div class="form-group mb-3">
            <label for="password">Jelszó:</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Adja meg a jelszót"
              required
              autofocus
            />
          </div>
          <button type="submit" class="btn btn-light btn-lg btn-block" style="width: 100%;">
            Bejelentkezés
          </button>
        </form>
        
        <div style="text-align: center; margin-top: 2rem;">
          <a href="/" class="btn btn-secondary">Vissza a főoldalra</a>
        </div>
      </div>
    </div>
  </body>
</html>
